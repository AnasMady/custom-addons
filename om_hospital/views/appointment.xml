<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}" nolabel="1"
                           statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div>
                        <h2 style="display:flex;justify-content:space-around;padding-bottom:10px;border-bottom:#ddd 1px solid">
                            <div>
                                <button name="increment_priority" string="+" class="oe_highlight" type="object" style="margin-right:10px;padding:5px"/>
                                <field name="priority" widget="priority"/>
                                <button name="decrement_priority" string="-" class="oe_highlight" type="object" style="margin-left:10px;padding:5px"/>
                            </div>
                            <button name="%(om_hospital.action_patient)d" confirm="Sure?" type="action"
                                    string="Visit Patients"
                                    class="oe_highlight"/>
                            <button name="cancel" type="object" string="Cancel" class="oe_highlight"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" default_focus="1"/>
                            <field name="doctor_id" widget="many2one_avatar_user"/>
                            <field name="booking_date"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="personal_info" string="Personal Info">
                            <group>
                                <field name="gender"/>
                                <field name="ref"/>
                            </group>
                        </page>
                        <page name="prescription" string="Prescription">
                            <field name="prescription" options="{'collaborative':true,'resizable':true}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0" string="Group_by">
                    <filter name="state_group" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree
                    multi_edit="1"
                    sample="1"
                    decoration-success="state == 'done'"
                    decoration-warning="state == 'in_consultation'"
                    decoration-info="state == 'draft'"
                    decoration-danger="state == 'cancel'">
                <field name="patient_id"/>
                <field name="gender" optional="hide"/>
                <field name="ref" optional="hide"/>
                <field name="appointment_time"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="booking_date" optional="show"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-success="state == 'done'"
                       decoration-warning="state == 'in_consultation'"
                       decoration-info="state == 'draft'"
                       decoration-danger="state == 'cancel'"
                       widget="badge"/>
            </tree>
        </field>
    </record>
    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your First Appointment Por Favor
            </p>
        </field>
    </record>
</odoo>